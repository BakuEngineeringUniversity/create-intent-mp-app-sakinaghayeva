<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/sakina"
            android:contentDescription="Profile Image" />

        <!-- Information Table -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!-- Name and Surname -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name and Surname:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/fullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sakina Aghayeva" />
            </TableRow>

            <!-- Email -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sakinaghayeva1@gmail.com" />
            </TableRow>

            <!-- Location -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baku, Azerbaijan" />
            </TableRow>

            <!-- Contact Number -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Number:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/contactNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+994 55 596 00 64" />
            </TableRow>
        </TableLayout>

        <!-- Call Button -->
        <Button
            android:id="@+id/callButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- University Link -->
        <TextView
            android:id="@+id/universityLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="University Website"
            android:textColor="#0000FF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Music Player Button -->
        <Button
            android:id="@+id/playMusicButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Music" />
    </LinearLayout>
</ScrollView>
